<%= render 'menu' %>
<br/>
<div style="text-align: right; height: 45px; margin-top: 12px;">
        <% if session['specification_p9'] != 2 %>
	<%= link_to '<button type="button" class="btn btn-warning"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar </button>'.html_safe, edit_request_path(@request) %>
   <%= link_to '<button type="button" class="btn btn-danger"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar </button>'.html_safe, @request,method: :delete,
       data: { confirm: '¿Está seguro que desea eliminar el servicio?' } %><% else %>Ya no puede editar. <% end %> <a  href="/requests/<%= @request.id %>.pdf"><button type="button" class="btn btn-primary"> Descargar </button></a> 
	</div>




<div class="col-xs-12">

  <table id="actTable" class="table table-striped">
   <tr>
				<th class="active text-center" colspan="2"><h2>Solicitud de compra a proveedor en el extranjero</h2></th>
			</tr> 
<td class="col-xs-5 text-right">Unidad Solicitante</td>
		   <td class="col-xs-7"><%= @request.unidad_solicitante %></td>
		 </tr>
		 <tr>
		   <td class="col-xs-5 text-right">Persona de contacto</td>
		   <td class="col-xs-7"><%= @request.persona_contacto %></td>
		 </tr>
		 <tr>
		   <td class="col-xs-5 text-right">Teléfono</td>
		   <td class="col-xs-7"><%= @request.telefono %></td>
		 </tr>
		 <tr>
		   <td class="col-xs-5 text-right">Email</td>
		   <td class="col-xs-7"><%= @request.email %></td>
		 </tr>
		 <tr>
		   <td class="col-xs-5 text-right">Origen de fondos</td>
		   <td class="col-xs-7"><%= @request.fondos %></td>
		 </tr>
                <tr>
		   <td class="col-xs-5 text-right">Proforma</td>
		   <td class="col-xs-7"><%= link_to "Descargar", @request.proforma_url %></td>
		 </tr>
                 <tr>
		   <td class="col-xs-5 text-right">Folleto o catálogo</td>
		   <td class="col-xs-7"><%= link_to "Descargar", @request.folleto_url %></td>
		 </tr>
                 <% if @request.acta_consejo_directo_url != "" %>
                 <tr>
		   <td class="col-xs-5 text-right">Acta del Consejo Directo</td>
		   <td class="col-xs-7"><%= link_to "Descargar", @request.acta_consejo_directo_url %></td>
		 </tr>
                 <% end %>
                 <% if @request.fonacit_url != "" %>
                 <tr>
		   <td class="col-xs-5 text-right">Contrato Fonacit</td>
		   <td class="col-xs-7"><%= link_to "Descargar", @request.fonacit_url %></td>
		 </tr>
                 <% end %>
	 
   </table>
  
  </div>
</div>



