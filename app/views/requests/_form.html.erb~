<script>

	function HandleBrowseClick(a)
	{
		 var fileinput = document.getElementById("browse"+a);
		 fileinput.click();
	}

	function Handlechange(a)
	{
		 var fileinput = document.getElementById("browse"+a);
		 var textinput = document.getElementById("filename"+a);
		 textinput.value = fileinput.value;
	}

</script>


