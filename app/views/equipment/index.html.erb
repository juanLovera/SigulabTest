          <div id="demo">

            <%= form_tag (new_loan_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <% if @sum > 0 %>
                    <th></th>
                    <% end %>
                    <th class="tg-093g">Nombre</th>
                    <th class="tg-093g">N° de BN</th>
                    <th class="tg-093g">Ubicación</th>
                    <th class="tg-hgcj">Responsable</th>
                    <th class="tg-hgcj">Status</th>
                    <th class="tg-hgcj">Origen</th>
                   
                  </tr>
                </thead>

                <tbody>
                  <% @equipments.each do |equipment| %>
                    <tr>
                      <% if @sum > 0 %>
                        <td class="tg-s6z2"><%= check_box_tag "item_ids[]", equipment.id2 %></td>
                      <% end %>
                      <td class="tg-s6z2"><span class="mayus"><%= link_to equipment.name, equipment %></span></td>
                      <td class="tg-s6z2"><span class="mayus"><%= equipment.national_good %></span></td>
                      <td class="tg-s6z2"><span class="mayus"><%= equipment.location %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= equipment.responsible %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= equipment.status %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= equipment.origen %></span></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>

