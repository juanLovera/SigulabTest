
<table id="example" class="table table-hover" >
	  <thead>
		 <tr>
		   <th align="left">Nro</th>
		   <th align="left">Tipo</th>
		   <th align="left" style="width: 60%;">Nombre</th>
		   <th align="left">Proceso</th>
		 </tr>
	  </thead>

	  <tbody>
		 <% @specifications.each_with_index do |specification,index| %>
	  		<tr>
		     <td><%= index+1 %></td>
		     <td><%= specification.tipo %></td>
		     <td style="width: 60%;"><%= specification.nombre %></td>
		     <td style="text-align:right">

		     <%= link_to '<button type="button" class="btn btn-primary">Completar</button>'.html_safe,  {:controller => "comprando", :action => "seleccionarEspecificacion", :specification => specification.id } %></td>
		   </tr>
		 <% end %>
<% if @sumSpecifications == 0 %>
		 	<tr class="warning">
				<td class="text-center" colspan="5"><h4>No hay especificaciones t√©cnicas registradas</h4></td>
			</tr>
		 <% end %>
		 
	  </tbody>
	</table>
