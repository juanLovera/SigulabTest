<h3>Lista de Gastos</h3>

<style>

	table {
		margin: 0 auto;
		margin-top: 0;
	}
	
	#placetable td, #placetable th {
		border: 1px solid black;
		background-color: #245269;
		color: #FFFFFF;
		text-align: center;
	}
	#placetable th {
		font-size: 15px;
	}
</style>

<table id="placetable" style="margin-top: 100px; border: 1px solid black;">
	<tr>
		<th>Fecha</th>
		<th>Codigo</th>
		<th>Beneficiario</th>
		<th>Monto</th>
	</tr>
	<% @transactions.each do |t| %>
		<tr>
			<td><%= t.date.strftime('%d/%m/%Y') %></td>
			<td><%= t.outcome_code %></td>
			<td><%= t.recipient %></td>
			<td><%= t.outcome %></td>
		</tr>
	<% end %>
</table>
<br />
<%= link_to 'Volver al resumen de presupuesto', controller: 'transactions', action: 'index' %>