<h1>Nueva Donaci칩n</h1>
<ol class="breadcrumb">
	<li> <%=link_to 'Inicio', controller: 'statics'%></li>
	<li> <%=link_to 'Inventario', inventario_url %></li>
	<li> <%=link_to 'Donaciones', donations_path %></li>
	<li class="active"> Nueva Donaci칩n </li>
</ol>


<div id = "table2">
</div>
<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div class="col-xs-12" role="alert">
      <div class="alert alert-danger">
        <ul>
          <% @donation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class ="Informacion">

<div class="col-xs-12">
        <table class="table table-striped">

          <tr>
            <td class="col-xs-5 text-right"><strong>Nombre:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :nombreItem %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Marca:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :marca %></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Modelo:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :modelo %></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Cantidad:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :cantidad %>
            <span class="red">*</span></td>
          </tr>  

          <tr>
            <td class="col-xs-5 text-right"><strong>Unidad de Medida:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :unidadMedida %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>No. Documento:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :numDocumento %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Fecha del Documento:</strong></td>
            <td class="col-xs-7"> <%= f.text_field :fechaDocumento, :class => "bootlayout-date" %></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Valor Estimado:</strong></td>
            <td class="col-xs-7"> Bs. <%= f.number_field(:estimado, min: 0, :step => 'any') %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Tipo:</strong></td>
            <td class="col-xs-7"><%= f.select(:tipo, [ ['Equipos/Mobiliarios'],['Instrumentos de Medici칩n'],
              ['Herramientas'], ['Consumibles/Materiales'] ] ) %></td>
          </tr>

        </table>



      <div class="col-xs-12 text-center">
        <div class="actions">
          <button type="submit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-floppy-saved"></span>&nbsp;&nbsp;Crear</button>
          <%= link_to donations_path do %>
            <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atr치s</button>
          <% end %>
        </div>
      </div>
<br><br><br><br>
      </div>
    <br><br><br>
  </div>
<% end %>



<style>

.red {
    font-size               : 22px;
    color                   : red;
}

.Informacion {
    line-height             :1.6em;
}

</style>
