<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li> <%=link_to 'Donaciones', donations_path %></li>
  <li class="active"> Ver Donación </li>
</ol>


  <div class="col-xs-12 text-right">

    <%= link_to donations_path do %>
      <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Volver</button>
    <% end %>

  </div>
<br><br>

<div class ="Informacion">
  <div class="col-xs-12">
    <table class="table table-striped">

    <tr>
      <td class="col-xs-5 text-right"><strong>Nombre:</strong></td>
      <td class="col-xs-7"> <%= @donation.nombreItem %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Marca:</strong></td>
      <td class="col-xs-7"> <%= @donation.marca %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Modelo:</strong></td>
      <td class="col-xs-7"> <%= @donation.modelo %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Cantidad:</strong></td>
      <td class="col-xs-7"> <%= @donation.cantidad %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Unidad de Medida:</strong></td>
      <td class="col-xs-7"> <%= @donation.unidadMedida %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>No. Documento:</strong></td>
      <td class="col-xs-7"> <%= @donation.numDocumento %>
      </td>
    </tr>

        <tr>
        <td class="col-xs-5 text-right"><strong>Documento:</strong></td>
        <td class="col-xs-7"><%= link_to "Consultar", @donation.document_url %></td>
          </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Fecha del Documento:</strong></td>
      <td class="col-xs-7"> <%= @donation.fechaDocumento %>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Valor Estimado:</strong></td>
      <td class="col-xs-7">  Bs.<%= @donation.estimado%>
      </td>
    </tr>

    <tr>
      <td class="col-xs-5 text-right"><strong>Tipo:</strong></td>
      <td class="col-xs-7"> <%= @donation.tipo %>
      </td>
    </tr>

    </div>
  </table>

<br><br>
<div class="col-xs-12">
  <div class="col-xs-6 text-left">

    <% if can? :create, @donation %>
          <%= link_to new_donation_path do %>
            <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Agregar Donación</button>
          <% end %> 
    <%end%>
    <% if can? :update, @donation %>
      <%= link_to edit_donation_path(@donation) do %>
        <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Editar</button>
      <% end %>
    <% end %>
    <% if can? :hide, @donation %>
          <%= link_to @donation, method: :delete, data: { confirm: '¿Estás seguro?' } do%>
            <button type="button" class="btn btn-danger"><span class="fa fa-times fa-1x"></span>&nbsp;&nbsp;Eliminar</button>
          <% end %>
    <%end%>
  </div>
</div>
<br><br><br><br>

