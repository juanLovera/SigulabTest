<body>
<table id="donationsTable" class="table table-hover" >
	  <thead>
		 <tr>
		   <th align="left">Nombre</th>
		   <th align="left">Marca</th>
		   <th align="left">Cantidad</th>
		   <th align="left">Tipo</th>
		 </tr>
	  </thead>

	  <tbody>
		 <% @donations.each do |donation| %>
	  		<tr>
		     <td style="text-decoration:underline; color:black"><%= link_to donation.nombreItem, donation %></td>
		     <td><%= donation.marca %></td>
		     <td><%= donation.cantidad %></td>
		     <td><%= donation.tipo %></td>
		   </tr>
		 <% end %>
		 <% if @sumDonations == 0 %>
		 	<tr class="warning">
				<td class="text-center" colspan="5"><h4>No hay donaciones registradas</h4></td>
			</tr>
		 <% end %>
	  </tbody>
	</table>
</body>

