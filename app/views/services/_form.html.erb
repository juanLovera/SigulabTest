white-space: nowrap;
vertical-align: middle;
color: #fff;
background-color: #428bca;
border-color: #357ebd;
border: 1px solid transparent;
border-radius: 4px;


}


select {
    padding:3px;
    margin: 0;
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;
    background: white;
    outline:none;
    display: inline-block;
    cursor:pointer;
    width: 200px;
    height: 35px;
   font-size: 14px;
}

.red {

font-size: 20px;
color: red;

}


input[type="text"], textarea {

display: block;
width: 200px;
height: 34px;
padding: 6px 12px;
font-size: 14px;
line-height: 1.42857143;
color: #555;
background-color: #fff;
background-image: none;
border: 1px solid #ccc;
border-radius: 4px;
maxlength:100;

}

input[type="text"]:focus, textarea:focus { 
    outline: none;
    border-color: #9ecaed;
    box-shadow: 0 0 10px #9ecaed;
}

h2 {

position:relative;
right: 150px;
