<div class="grid_12 push_5">
  <%= form_for(@service) do |f| %>
    <span class="red" style="margin-left:-130px; font-size: 99%;"> <%= @service.errors.full_messages.first if @service.errors.any? %> </span>
	<table style="margin-left:-130px; margin-top:15px;"><tr><td>
                   <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Nro de bien nacional del equipo" %><br>
          <%= f.text_field :numero %>
  		 </div></td><td>
                    <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Nombre del equipo" %><br>
          <%= f.text_field :nombre %>
  		 </div></td></tr><tr><td>
              		 <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Ubicación del equipo"  %><br>
    		 <%= f.text_area :ubicacion %>
  		 </div></td><td>
 		   <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Tipo de servicio" %><br>
          <%= f.collection_select :tipo, Service::TipoServicio, :to_s, :to_s, 
          :include_blank => true %>
                   </div></td></tr><tr><td colspan="2">
       <div class="field">

         <%= f.label "Descripción del Servicio" %><br>
          <%= f.text_area :descripcion, :maxlength => 160, :style => "width:425px; height:80px;", :placeholder => "Máximo 160 caracteres" %>
       </div></td></tr><tr><td colspan="2" style="padding-left:140px;">

<br><%= f.hidden_field :specification_id, :value => session['specification_sel_id'] %>
  		 <div class="actions">
       <%= f.submit "Aceptar", :style => "float:left; ", data: { confirm: '¿Está seguro de la informacion que acaba de suministrar?' } %>
  		 </div><br>
       <% end %>
  		 <%= link_to '<button type="button" style="margin-left:10px; margin-top:-41px;" class="btn btn-primary"> Cancelar </button>'.html_safe,    services_url %><br>
	</td></tr></table>
</div>

<style>


input[type="submit"] {

display: inline-block;
padding: 6px 12px;
