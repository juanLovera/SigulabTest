<%= render 'menu' %>
<br/>
<div style="text-align: right; height: 45px; margin-top: 12px;">
    <%= link_to '<button type="button" class="btn btn-primary"> Volver </button>'.html_safe, services_url %>
      <% if session['specification_p1'] != 2 %>
	<%= link_to '<button type="button" class="btn btn-warning"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar </button>'.html_safe, edit_service_path(@service) %>
  
   <%= link_to '<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar </button>'.html_safe, @service,method: :delete,
       data: { confirm: '¿Está seguro que desea eliminar el servicio?' } %><% else %>Ya no puede editar porque se generó la solicitud. <% end %>
	</div>


<div class="col-xs-12">

  <table id="actTable" class="table table-striped">
   <tr>
				<th class="active text-center" colspan="2"><h2>Servicio</h2></th>
			</tr>
      <tr>
        <td class="col-xs-5 text-right">Tipo de servicio</td>
        <td class="col-xs-7"><%=@service.tipo%></td>
      </tr>
      <tr>
        <td class="col-xs-5 text-right">Descripción del Servicio</td>
        <td class="col-xs-7"><%=@service.descripcion %></td>
      </tr>
     	 <tr>
       	<td class="col-xs-5 text-right">Nombre del Equipo</td>
       	<td class="col-xs-7"><%=@service.nombre%></td>
    	</tr>
     	 <tr>
       	<td class="col-xs-5 text-right">Número del bién</td>
       	<td class="col-xs-7"><%=@service.numero%></td>
    	</tr>
    	<tr>
       	<td class="col-xs-5 text-right">Ubicación</td>
       	<td class="col-xs-7"><%=@service.ubicacion%></td>
    	</tr>
 	
	</table>

	</div>
</div>


<style>



#serviceTable th, td, tr{
	border-color:#7A7070;
   font-size: 14px;
 
}

#serviceTable th {
background-color: #F2F8F7;
}



.table-bordered {

	border-color:#7A7070;

}

.table-bordered>tbody>tr>td {

	border-color:#7A7070;


}


#serviceTable td:nth-child(even) {

border-color:#7A7070;

}

</style>

