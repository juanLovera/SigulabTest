<h2>¿Olvidó su contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control', id: "field" %></div>
<br>
  <div><%= f.submit "Enviarme instrucciones para recuperar contraseña" %></div>
<% end %>
<br>

<style> 

  #field { width: 240px; height: 25px;}

</style>
