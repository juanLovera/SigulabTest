<%= render 'menu' %>
<br/>
<div style="text-align: right; height: 45px; margin-top: 12px;">
<%= link_to '<button type="button" class="btn btn-primary"> Volver </button>'.html_safe, quotes_url %>       
<% if session['specification_p3'] != 2 %>
	<%= link_to '<button type="button" class="btn btn-warning"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar </button>'.html_safe, edit_quote_path(@quote) %>
    <% if @puedeEliminar%><%= link_to '<button type="button" class="btn btn-danger"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar </button>'.html_safe, @quote,method: :delete,
       data: { confirm: '¿Está seguro que desea eliminar el servicio?' } %><% end %><% else %>Ya no puede editar porque se generó la solicitud. <% end %>
	</div>

  <table id="actTable" class="table table-striped">
   <tr>
				<th class="active text-center" colspan="2"><h2>Oferta</h2></th>
			</tr>
	  	 <tr>
       	<td class="col-xs-5 text-right">Nombre de la empresa</td>
       	<td class="col-xs-7"><%=@quote.nombre%></td>
    	</tr>
     	 <tr>
       	<td class="col-xs-5 text-right">Oferta</td>
       	<td class="col-xs-7"><a href='<%= @quote.attachment_url.gsub("nca","Especificacion_"+session['specification_sel_id'].to_s+"_Oferta_Empresa_"+@quote.nombre)  %>'>Ver Oferta</a></td>
    	</tr>
<tr>
       	<td class="col-xs-5 text-right">Items o servicios relacionados</td>
        
       	<td class="col-xs-7"><% @itemsquote.each do |item| %><%= item.nombre_item %><br/><%end%></td>
        
    	</tr>
 
	</table>

	</div>
</div>

<style>

#quoteTable th, td, tr{
	border-color:#7A7070;
   font-size: 14px;
 
}

#quoteTable th {
background-color: #F2F8F7;
}



.table-bordered {

	border-color:#7A7070;

}

.table-bordered>tbody>tr>td {

	border-color:#7A7070;


}


#quoteTable td:nth-child(even) {

border-color:#7A7070;

}

</style>

