<%= stylesheet_link_tag 'demo_table_jui.css'%>
<%= stylesheet_link_tag 'chemical_substances.css.scss'%>
<%= stylesheet_link_tag 'examples_support/themes/smoothness/jquery-ui-1.8.4.custom.css'%>
<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li> <%=link_to 'Equipos', equipment_index_path %></li>
  <li class="active"> Registros </li>
</ol>

  <div class="col-xs-12">
    <h1><i class="fa fa-bar-chart"></i> Registros</h1>
  </div>

  <div class="col-xs-12">
    
    <div class="well">

      <table cellpadding="0" cellspacing="0" border="0" class="display">
      <tbody>
        <tr>
          <% @equipos.each do |equipo| %>
            <td class="text-left"><%= 'Equipo:  ' %><span class="mayus"><%= equipo.name %></span></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    </div>

  </div>



  <div class="col-xs-12">
      <body id="dt_example" class="ex_highlight_row">

        <div id="container">
          <div id="demo">
            <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
              <thead>
                <tr>
                  <th class="text-center">Fecha</th>
                  <th class="text-center">No. O/S</th>
                  <th class="text-center">Tipo de Servicio</th>
                  <th class="text-center">Descripción</th>
                  <th class="text-center">Fecha de inicio</th>
                  <th class="text-center">Fecha de Culminación</th>
                  <th class="text-center">Observaciones</th>
                </tr>
              </thead>

              <tbody>
                <% @records.each do |record| %>
                  <tr>
                    <td class="text-center"><%= link_to record.fecha, record %></td>
                    <td class="text-center"><%= record.fecha %></td>
                    <td class="text-center"><%= record.nos %></td>
                    <td class="text-center"><%= record.tipoServicio %></td>
                    <td class="text-center"><%= record.descripcion %></td>
                    <td class="text-center"><%= record.fechaini %></td>
                    <td class="text-center"><%= record.fechafin %></td>
                    <td class="text-center"><%= record.observaciones %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>

      <p></p>

    </div>
    
    <br>

<div class="col-xs-12" align="left">
  <p></p>
  <%= link_to new_record_path(@id) do %>
    <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Agregar Registro</button>
  <% end %>
  <%= link_to equipment_index_path do %>
    <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atrás</button>
  <% end %>
</div>

<style>

.mayus {
  text-transform: uppercase;
  font-weight: bold;
}

</style>
