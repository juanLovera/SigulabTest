
<div class="grid_12 push_5">
   <%= form_for(@item) do |f| %>
    <span class="red" style="margin-left:-130px; font-size: 99%;"> <%= @item.errors.full_messages.first if @item.errors.any? %> </span>
	<table style="margin-left:-130px; margin-top:15px;">
            <tr><td style="padding-right:25px;">
    <div class="field">
       <span class="red">*</span>
     <%= f.label "Tipo" %><br>
     <%= f.collection_select :tipo, Item::TipoItem, :to_s, :to_s, 
          :include_blank => true %>
    </div></td><td>
	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Nombre del Bien/Consumible" %><br>
		 <%= f.text_field :nombre, :placeholder => "Nombre del consumible" %>
	  </div></td><tr><td style="padding-right:25px;">
            	  <div class="field">
       <span class="red">*</span>
		 <%= f.label "Cantidad" %><br>
		 <%= f.text_field :cantidad, :placeholder => "Cantidad de ítems" %>
	  </div></td></tr><tr><td colspan="2">
            <div class="field">
		 <%= f.label "Descripción del ítem" %><br>
		 <%= f.text_area :descripcion, :maxlength => 160, :style => "width:425px; height:80px;", :placeholder => "Máximo 160 caracteres" %>
	  </div></td></tr>
<%= f.hidden_field :specification_id, :value => session['specification_sel_id'] %>
            <tr><td colspan="2" style="padding-left:140px;"><br>
	  <div class="actions">
		 <%= f.submit "Aceptar", :style => "float:left; margin-right:10px;" ,data: { confirm: '¿Está seguro de la informacion que acaba de suministrar?' } %><br>
	  </div>
   <% end %>
	
	<%= link_to '<button type="button" class="btn btn-primary" style="margin-top:-41px;"> Cancelar </button>'.html_safe, 
  items_url %></td></tr>
</table>
</div>
