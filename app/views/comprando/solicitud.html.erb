		       <li style="text-align:left"><h4><i class="fa fa-file-text-o"> Informe de recomendación</i></h4></li>
		   <% end %>
			<%= link_to acts_url do %>
		       <li style="text-align:left"><h4><i class="fa fa-angle-right"> &nbsp Acto motivado </i></h4></li>
		   <% end %>
		   <%= link_to requisitions_url do %>
		       <li style="text-align:left"><h4><i class="fa fa-files-o"> Requisición </i></h4></li>
		   <% end %>
			<%= link_to devolutions_url do %>
		       <li style="text-align:left"><h4><i class="fa fa-close"> Nota de devolución</i></h4></li>
		   <% end %>
