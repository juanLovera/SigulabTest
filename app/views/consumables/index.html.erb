      <body class="ex_highlight_row">
        <div id="container">
          <div id="demo">

            <%= form_tag (new_loan_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <% if @sum > 0 %>
                    <th></th>
                    <% end %>
                    <th class="tg-093g">Nombre</th>
                    <th class="tg-093g">Cantidad</th>
                    <th class="tg-093g">Ubicación</th>
                    <th class="tg-hgcj">Responsable</th>
                    <th class="tg-hgcj">Material</th>
                   <th class="tg-hgcj">Origen</th>
                  </tr>
                </thead>

                <tbody>
                  <% @consumables.each do |consumable| %>
                    <tr>
                      <% if @sum > 0 %>
                        <td class="tg-s6z2"><%= check_box_tag "item_ids[]", consumable.id2 %></td>
                      <% end %>
                      <td class="tg-s6z2"><span class="mayus"><%= link_to consumable.name, consumable %></span></td>
                      <td class="tg-s6z2"><span class="mayus"><%= consumable.quantity %></span></td>
                      <td class="tg-s6z2"><span class="mayus"><%= consumable.location %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= consumable.responsible %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= consumable.material %></span></td>
                      <td class="tg-qpa3"><span class="mayus"><%= consumable.origen %></span></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>

  <br>
</div>

<div class="col-xs-12" align="left">
  <p></p>
