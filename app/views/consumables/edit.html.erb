<%= stylesheet_link_tag 'chemical_substances.css.scss'%>
<%= javascript_include_tag 'jquery-1.10.2.js'%>
<%= javascript_include_tag 'jquery-ui.js' %>
<%= stylesheet_link_tag 'jquery-ui.css'%>
<%= javascript_include_tag 'tabs.js' %>

<div class="row">

<ol class="breadcrumb">
    <li> <%=link_to 'Inicio', controller: 'statics'%></li>
    <li> <%=link_to 'Inventario', inventario_url %></li>
    <li> <%=link_to 'Consumibles', consumables_path %></li>
    <li class="active"> Editar </li>
</ol>


<%= form_for(@consumable) do |f| %>
  <% if @consumable.errors.any? %>
    <div class="col-xs-12" role="alert">
      <div class="alert alert-danger">
        <ul>
          <% @consumable.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class="col-xs-12">
  <div class="col-xs-6 text-left">
  <h1>Editar Consumible</h1>
  </div>
  <div class="col-xs-6 text-right">
    <%= link_to consumables_path do %>
    <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Volver</button>
    <br><br>
  <% end %>
  </div>
</div>
<br><br>

<div id = "table2">
</div>

<br>
</div>

    <div id="tabs-1">
      <div class="form-group">
        <table class="table table-striped">

          <tr>
            <td class="col-xs-5 text-right"><strong>Nombre:</strong></td>
            <td class="col-xs-7"><%= f.text_field :name %><span class="red">*</span</td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Descripción:</strong></td>
            <td class="col-xs-7"><%= f.text_area :description %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Material:</strong></td>
            <td class="col-xs-7"><%= f.text_field :material %></td>
          </tr>
           <tr>

            <td class="col-xs-5 text-right"><strong>Cantidad:</strong></td>
            <td class="col-xs-7"><%= f.text_field :quantity %></td>
          </tr>
           
         <tr>
            <td class="col-xs-5 text-right"><strong>Uso:</strong></td>
              <td class="col-xs-7">   
              <%= f.check_box :investigation %>
              <%= 'Investigación' %>
              <%= f.check_box :teaching %>
              <%= 'Docencia' %>
              <%= f.check_box :extention %>
              <%= 'Extensión' %>
              <%= f.check_box :management %>
              <%= 'apoyo Administrativo' %></div></td>
         </tr>

        </table>
      </div>
    </div>

    <div id="tabs-2">
      <div class="form-group">
        <table class="table table-striped">

            <td class="col-xs-5 text-right"><strong>Responsable:</strong></td>
            <td class="col-xs-7"><%= f.text_field :responsible %><span class="red">*</span</td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Dependencia:</strong></td>
            <td class="col-xs-7"><%= f.text_field :dependency %>
            <span class="red">*</span> </td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Ubicación Física:</strong></td>
            <td class="col-xs-7"><%= f.text_field :location %>
            <span class="red">*</span> </td>
          </tr>
          <tr>



        </table>
      </div>
    </div>

    <div id="tabs-3">
      <div class="form-group">
        <table class="table table-striped">

         <tr>
            <td class="col-xs-5 text-right"><strong>Factura:</strong></td>
            <td class="col-xs-7"><%=  f.text_field :bill %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Costo:</strong></td>
            <td class="col-xs-7"><%= f.number_field(:cost, min: 0, :step => 'any') %>&nbsp;Bs.</td> 
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Orden de Compra:</strong></td>
            <td class="col-xs-7"><%=  f.text_field :buy_order %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Fecha Adquisición:</strong></td>
            <td class="col-xs-7"><%= f.text_field :adquisition_date, :class => "bootlayout-date" %></td> 
          </tr>
            <tr>
            <td class="col-xs-5 text-right"><strong>Origen:</strong></td>
            <td class="col-xs-7"><%=f.select(:origen, [['Comprado'], ['Donado']] )%></td>
          </tr>


        </table>
      </div>
  </div>
</div>
<br><br>


<div class="col-xs-12 text-center">
  <div class="actions">
    <button type="submit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-floppy-saved"></span>&nbsp;&nbsp;Actualizar</button>
  </div>
</div>
<% end %>
        <br><br>
</div>

