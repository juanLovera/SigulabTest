  <li> <%=link_to 'Bitácora', binnacles_path(@id) %></li>
  <li class="active"> Detalle </li>
</ol>
<% if @sustancias %> 
<div class="col-xs-12">
    
    <div class="well">

      <table cellpadding="0" cellspacing="0" border="0" class="display">
      <tbody>
        <tr>
          <% @sustancias.each do |sustancia| %>
            <td class="text-left"><%= 'Sustancia:  ' %><span class="mayus"><%= sustancia.name %></span></td>
            <td class="text-right" align="right">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= 'Unidad de Medida:  ' %><span class="mayus"><%= sustancia.meassure %></span></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    </div>

  </div>

  <% end %>

  <br>


    <div class="col-xs-12">
        <table class="table table-striped">
          <tr>
            <td class="col-xs-5 text-right"><strong>Fecha:</strong></td>
            <td class="col-xs-7"><%= @binnacle.fecha %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Tipo de Registro:</strong></td>
            <td class="col-xs-7"><%= @binnacle.tipo %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Cantidad Ingresada:</strong></td>
            <td class="col-xs-7"><%= @binnacle.ingreso %><%= @unidad %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Cantidad Consumida:</strong></td>
            <td class="col-xs-7"><%= @binnacle.consumo %><%= @unidad %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Descripción:</strong></td>
            <td class="col-xs-7"><%= @binnacle.descripcion %></td>
          </tr>
        </table>
    </div>

<div class="col-xs-12">
  <%= link_to edit_binnacle_path(@binnacle) do %>
    <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Editar Registro</button>
  <% end %>
  <%= link_to binnacles_path(@id) do %>
    <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atrás</button>
  <% end %>
</div>


<style>
.mayus {
  text-transform: uppercase;
  font-weight: bold;
}
  #span1 { width: 25px; float: left; height:100%; }
  #span2 { width: 110px; float: left; height:50%;}
</style>

<script type="text/javascript">

  if( window.localStorage )
  {
    if( !localStorage.getItem( 'firstLoad' ) )
    {
      localStorage[ 'firstLoad' ] = true;
      window.location.reload();
    }
    else
      localStorage.removeItem( 'firstLoad' );
  }
;
  </script>
